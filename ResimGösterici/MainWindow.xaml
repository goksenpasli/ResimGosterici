<Window x:Class="ResimGösterici.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:ResimGösterici"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="RESİM GÖR"
    Width="800" Height="450"
    UseLayoutRounding="True"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Content="AÇ" Command="{Binding Yükle}" />
        <ListBox Grid.Row="1" ItemsSource="{Binding Resimler}" VirtualizingStackPanel.VirtualizationMode="Recycling">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Blue" BorderThickness="1">
                        <Image>
                            <Image.Source>
                                <BitmapImage CreateOptions="DelayCreation" DecodePixelHeight="96" UriSource="{Binding Yol}" />
                            </Image.Source>
                            <Image.ToolTip>
                                <ToolTip DataContext="{Binding Path=PlacementTarget.DataContext, RelativeSource={RelativeSource Mode=Self}}">
                                    <Image Source="{Binding Yol}" />
                                </ToolTip>
                            </Image.ToolTip>
                        </Image>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <local:VirtualizingWrapPanel ItemHeight="96" ItemWidth="96" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
    </Grid>
</Window>
